#!/usr/bin/env php
<?php

declare(strict_types=1);

use Everoute\Cli\CacheWarmCommand;
use Everoute\Cli\ConstellationDeriveCommand;
use Everoute\Cli\ConstellationDistBuildCommand;
use Everoute\Cli\DoctorCommand;
use Everoute\Cli\FetchRiskCommand;
use Everoute\Cli\ImportRiskCommand;
use Everoute\Cli\ImportUniverseCommand;
use Everoute\Cli\InstallCommand;
use Everoute\Cli\JumpInspectCommand;
use Everoute\Cli\JumpRangeCommand;
use Everoute\Cli\JumpValidateCommand;
use Everoute\Cli\MapDeriveCommand;
use Everoute\Cli\PrecomputeAllCommand;
use Everoute\Cli\PrecomputeGateDistancesCommand;
use Everoute\Cli\PrecomputeJumpNeighborsCommand;
use Everoute\Cli\StaticSwapCommand;
use Everoute\Cli\StaticRebuildCommand;
use Everoute\Cli\PrecomputeHierarchyCommand;
use Everoute\Cli\PrecomputeSystemFactsCommand;
use Everoute\Cli\RebuildJumpNeighborsCommand;
use Everoute\Cli\RiskIngestCommand;
use Everoute\Cli\RiskRefreshCommand;
use Everoute\Cli\RiskPruneCommand;
use Everoute\Cli\SdeCheckCommand;
use Everoute\Cli\SdeCleanupCommand;
use Everoute\Cli\SdeInstallCommand;
use Everoute\Cli\SdeUpdateCommand;
use Everoute\Cli\SeedChokepointsCommand;
use Everoute\Config\Env;
use Symfony\Component\Console\Application;

require_once __DIR__ . '/../vendor/autoload.php';

Env::load(dirname(__DIR__));

$application = new Application('Everoute Console', '1.0.0');
$application->add(new InstallCommand());
$application->add(new ImportUniverseCommand());
$application->add(new ImportRiskCommand());
$application->add(new FetchRiskCommand());
$application->add(new RiskIngestCommand());
$application->add(new RiskRefreshCommand());
$application->add(new RiskPruneCommand());
$application->add(new CacheWarmCommand());
$application->add(new ConstellationDeriveCommand());
$application->add(new ConstellationDistBuildCommand());
$application->add(new MapDeriveCommand());
$application->add(new SeedChokepointsCommand());
$application->add(new PrecomputeAllCommand());
$application->add(new PrecomputeGateDistancesCommand());
$application->add(new PrecomputeJumpNeighborsCommand());
$application->add(new RebuildJumpNeighborsCommand());
$application->add(new JumpValidateCommand());
$application->add(new JumpInspectCommand());
$application->add(new JumpRangeCommand());
$application->add(new PrecomputeSystemFactsCommand());
$application->add(new PrecomputeHierarchyCommand());
$application->add(new StaticRebuildCommand());
$application->add(new StaticSwapCommand());
$application->add(new SdeCheckCommand());
$application->add(new SdeInstallCommand());
$application->add(new SdeUpdateCommand());
$application->add(new SdeCleanupCommand());
$application->add(new DoctorCommand());
$application->run();
